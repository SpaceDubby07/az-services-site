---
import ServiceLayout from '../layouts/ServiceLayout.astro';
---

<ServiceLayout pageTitle="Name | Services">
  <div
    id="hero"
    class="bg-slate-950 text-white pt-40 min-h-screen pb-20 mb-20"
  >
    <div class="flex flex-col justify-center items-center">
      <h2 class="text-3xl font-bold text-center mb-2">Services</h2>
    </div>
    <!-- Amanda -->
    <div
      class="relative overflow-x-auto mx-10 mt-20 shadow-2xl rounded-lg"
    >
      <!-- Amanda services -->
      <table
        class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
      >
        <caption
          class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800"
        >
          Amanda
          <p
            class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400"
          >
            specializing in simplifying the immigration process by
            assisting individuals and families with preparing and
            submitting essential U.S. immigration paperwork.
          </p>
        </caption>
        <thead
          class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
        >
          <tr>
            <th scope="col" class="px-6 py-3"> Service </th>
            <th scope="col" class="px-6 py-3"> Price </th>
          </tr>
        </thead>
        <tbody>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 dark:text-white flex"
            >
              I-90 | Application to replace permanent resident card
              (Green Card)
            </th>
            <td class="px-6 py-4"> $2000 </td>
          </tr>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              Filing
            </th>
            <td class="px-6 py-4"> $500 </td>
          </tr>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              something
            </th>
            <td class="px-6 py-4"> $500 </td>
          </tr>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              something
            </th>
            <td class="px-6 py-4"> $500 </td>
          </tr>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              something
            </th>
            <td class="px-6 py-4"> $500 </td>
          </tr>
          <tr class="bg-white dark:bg-gray-800">
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              something
            </th>
            <td class="px-6 py-4"> $5 </td>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- Zach -->
    <div
      class="relative overflow-x-auto mx-10 mt-20 shadow-2xl rounded-lg"
    >
      <!-- Amanda services -->
      <table
        class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
      >
        <caption
          class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800"
        >
          Zach
          <p
            class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400"
          >
            Specializing in Web Development and Notarial
            Accreditation, he is a passionate developer who works with
            his clients to build something bold and dynamic.
          </p>
          <p
            class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400"
          >
            To meet clients needs, Zach requests you make a
            consultation appointment as web development costs vary
            based on project scope.
          </p>
        </caption>
        <thead
          class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
        >
          <tr>
            <th scope="col" class="px-6 py-3"> Service </th>
            <th scope="col" class="px-6 py-3"> Price </th>
          </tr>
        </thead>
        <tbody>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 dark:text-white flex"
            >
              Web Development Consultation
            </th>
            <td class="px-6 py-4"> Free </td>
          </tr>
          <tr
            class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
          >
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 dark:text-white flex"
            >
              Notorization (Connecticut)
            </th>
            <td class="px-6 py-4"> $5 per document </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <style>
    #hero {
      background-image: url('/images/bg.svg');
      background-size: cover;
      background-position: center;
    }
  </style>
</ServiceLayout>
