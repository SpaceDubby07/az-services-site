---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.0.0/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle || 'Safe Jelly'}</title>
  </head>
  <body>
    <!-- navbar -->
    <Navbar />
    <!-- content -->
    <slot />
    <ScrollToTop />
    <!-- footer -->
    <Footer />
  </body>
</html>

<style>
  @font-face {
    font-family: 'Poppins';
    src: url('/public/Poppins-Regular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: 'Poppins', serif;
  }
</style>

<script
  src="https://cdn.jsdelivr.net/npm/flowbite@3.0.0/dist/flowbite.min.js"
></script>
